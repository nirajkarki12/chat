<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/group.css">
</head>
<body>
<%- include partials/navbar.ejs %>

<div class="col-md-12">
   <form action="#" method="post">
       <div class="form-group ad-30" style="margin-top:8px;">
            <div class="input-group search-style">
                <input class="form-control new-search-bar"  name="country" id="search" placeholder="Enter Your Club Name" type="text">
                <span class="input-group-btn">
                    <button class="btn input-btn" type="" id="search-form">Search</button>
                </span>
            </div>
        </div>
   </form>
</div>
  
<div class="col-md-12">
    <div class="">
        <div class="row">
            <div class="col-md-3">
                <div class="row">
                    <div class="col-md-12">
                        <div class="filter-container">
                            <div class="card">
                                <form action="#" method="post">
                                    <div class="content">
                                        <p class="filter">
                                            FILTER
                                        </p>
                                        <hr/>
                                        <select class="form-control" name="country" id="country" >
                                            <option value="">Filter By Country</option>
											<% _.forEach(country, function(c){ %>
                                                <option value="<%= c._id %>"><%= c._id %></option>
                                            <% }) %>
                                        </select>
                                        <div class="clearfix"></div>
                                        <button class="btn add-apply">Apply</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-9">
                <div>
                    <div class="category-list">
                        <div class="row">
                            <% _.forEach(chunks, function(val2){ %>
                                <form action="/home" method="post" class="favorite">
                                    <div class="item col-md-4">
                                        <a href="/group/<%= val2.name %>" style="text-decoration:none">
                                            <div class="thumbnail">
                                               <img src="/uploads/<%= val2.image %>" alt="">
                                                <div class="caption">
                                                    <h4>
                                                        <%= val2.name %> (<%= val2.fans.length %>)
                                                    </h4>
                                                    
                                                    <div class="row">
                                                        <div class="col-xs-12 col-md-6">
                                                            <p>
                                                                <%= val2.country %>
                                                            </p>
                                                        </div>
                                                        
                                                        <div class="col-xs-12 col-md-6">
                                                            <input type="hidden" id="id" value="<%= val2._id %>">
                                                             <input type="hidden" name="clubName" id="club_Name" value="<%= val2.name %>">
                                                            <button class="btn add-fav">
                                                                Add To Favorite
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </form>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/bootstrap.min.js"></script>  
<script type="text/javascript" src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/js/group/sendrequest.js"></script>
<script type="text/javascript" src="/js/group/home.js"></script>
<script type="text/javascript" src="/js/group/global.js"></script>
</body>
</html>